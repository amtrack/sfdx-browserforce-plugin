{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/amtrack/sfdx-browserforce-plugin/src/plugins/security/authentication-configuration/schema.json",
  "title": "Authentication Configuration",
  "type": "object",
  "properties": {
    "services": {
      "description": "List of Authentication Services to configure under My Domain, each with desired enabled state",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "label": {
            "type": "string",
            "description": "The visible name of the authentication service"
          },
          "authProviderApiName": {
            "type": "string",
            "description": "The DeveloperName of the AuthProvider (alternative to label for matching)"
          },
          "enabled": {
            "type": "boolean",
            "description": "True to enable, false to disable"
          }
        },
        "oneOf": [
          { "required": ["label", "enabled"] },
          { "required": ["authProviderApiName", "enabled"] },
          { "required": ["label", "authProviderApiName", "enabled"] }
        ]
      },
      "default": []
    }
  },
  "required": ["services"]
}
