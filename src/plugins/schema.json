          "$ref": "./home-page-layouts/schema.json"
        },
        "salesforceToSalesforce": {
          "$ref": "./salesforce-to-salesforce/schema.json"
        },
        "security": {
          "$ref": "./security/schema.json"
        }
      }
    }
  }
}
