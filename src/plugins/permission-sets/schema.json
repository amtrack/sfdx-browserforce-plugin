{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://github.com/amtrack/sfdx-browserforce-plugin/src/plugins/permission-sets/schema.json",
  "title": "Permission Sets",
  "type": "object",
  "properties": {
    "permissionSetConfigurations": {
      "title": "Permission Set Configuration",
      "type": "array",
      "items": { "$ref": "#/definitions/permissionSetConfiguration" },
      "default": []
    }
  },
  "definitions": {
    "permissionSetConfiguration": {
      "type": "object",
      "properties": {
        "permissionSetDeveloperName": {
          "title": "Permission Set",
          "description": "The developer name of the Permission Set to modify",
          "type": "string"
        },
        "servicePresenceStatuses": {
          "$ref": "./service-presence-status/schema.json"
        }
      },
      "required": ["permissionSetDeveloperName"]
    }
  }
}
